extends ../layout

block content
    .uk-margin
    .uk-container.uk-container-center
        .uk-grid
            .uk-width-1-2
                form.uk-form-stacked(method="POST")
                    .uk-margin
                        label.uk-form-label(for='email') Email
                        .uk-form-controls
                            input#email.uk-input(type='text', placeholder='xyx@abc.com', name="email")
                    .uk-margin
                        label.uk-form-label(for='password') Password
                        .uk-form-controls
                            input#password.uk-input(type='password', placeholder='', name="password")
                    .uk-margin
                        label.uk-form-label(for='password2') Re-enter Password
                        .uk-form-controls
                            input#password2.uk-input(type='password', placeholder='', name="password2")
                    .uk-margin
                    button.uk-button.uk-button-primary CREATE
                    a(href="/users/login") &nbsp;already had an account?

            .uk-width-1-2 Hello World



